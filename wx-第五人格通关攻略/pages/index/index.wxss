/**index.wxss**/
view{
  box-sizing: border-box;
}
.container {
  width: 100%;
  background-color: #eee;
}

.swiper {
  height: 422rpx;
  width: 100%;
  padding-bottom: 10rpx;
}

.swiper image {
  width: 100%;
}
swiper-item{
  position: relative;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.swiper_title{
  display: inline-block;
  color: #fff;
  font-size: 35rpx;
  line-height: 50rpx;
  width: 80%;
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  margin: auto;
  font-weight: bold;
}
.itemOne {
  width: 100%;
   display: flex; 
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 20rpx 0rpx;
  background-color: #fff;
  margin: 10rpx 0;
}


.item_left {
  width: 55%;
  padding:20rpx 50rpx; 
}

.item_right {
  width: 45%;
}

.item_right image {
  width: 100%;
  
}
.itemOne_title{
  display: block;
  text-align: center;
  font-weight: bold;
  font-size: 35rpx;
  text-align: justify;
}
.itemOne_font{
  padding: 15rpx 0;
}
.itemOne_font text{
  font-size: 30rpx;
  color: #747474;
}
.margin_left{
  margin-left: 40rpx;
}
